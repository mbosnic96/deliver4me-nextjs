{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "noEmit": false
  },
  "include": ["server.ts"],
  "exclude": ["node_modules", ".next", "pages", "app", "**/*.test.ts", "**/*.spec.ts"]
}
